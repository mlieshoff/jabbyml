#set($packageName=$replacer.getPackageName($properties, $object))
package ${packageName};
#set($basePackageName=$replacer.getBasePackageName($properties))

import java.util.Map;
import java.util.concurrent.Future;
import jabbyml.essentials.api.ApiContext;
import jabbyml.essentials.api.BaseApi;

#set($foundImports=false)
#foreach( $method in $object.method )
    #set($attribute=$method.attribute.get(0))
    #set($packagePrefix=${replacer.getPackageNamePrefix($properties, $method.scope, $attribute.type)})
    #if(!$packagePrefix.equals($packageName.concat(".")))
import ${packagePrefix}${replacer.getTypeName($method.return)};
import ${packagePrefix}${replacer.getTypeName($attribute.type)};
        #set($foundImports=true)
    #end
#end
#if($foundImports)

#end
class ${filename} extends BaseApi implements ${WordUtils.capitalize($object.name)}Api {

  ${filename}(ApiContext apiContext) {
    super(apiContext);
  }

  @Override
  #foreach( $method in $object.method )
    #set($attribute=$method.attribute.get(0))
  public Future<${replacer.getTypeName($method.return)}> ${replacer.getMethodName($method.name)}(${replacer.getTypeName($attribute.type)} ${replacer.getAttributeName($attribute.type)}) {
    #set($httpMethod="get")
    #if($helper.isStereotype('post', $method))
        #set($httpMethod="post")
    #end
    return ${httpMethod}("${replacer.findContextValue($method.getContext(), 'url')}", ${replacer.getAttributeName($attribute.type)}, ${replacer.getTypeName($method.return)}.class, Map.of(${helper.mapKeyValueCommaSeparated($helper.getStereotypes('header', $method))}));
  }

#end
}